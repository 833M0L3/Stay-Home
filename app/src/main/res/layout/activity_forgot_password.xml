<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    app:cardCornerRadius="14dp"
    tools:context=".fragments.ForgotPassword">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="14dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forgot_pwd_title"
                android:text="Forgot Password"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_centerHorizontal="true"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uname_input"
                android:layout_below="@+id/forgot_pwd_title"
                android:backgroundTint="@color/box_color"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:background="@drawable/input_box_border"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Username"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_input"
                android:layout_below="@+id/uname_input"
                android:backgroundTint="@color/box_color"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:background="@drawable/input_box_border"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@+id/email_input"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>



</ScrollView>